---
import Footer from '../components/Footer.astro';
import ProjectCard from '../components/ProjectCard.astro';
import Layout from '../layouts/Layout.astro';

import { getDataNotion } from '../lib/notion';

const projectsData = await getDataNotion();
---

<Layout title="Katy Barboza">
  <main class="container">
    <section class="section">
      <div class="contents">
        <figure class="section__figure">
          <img
            src="/images/profile.png"
            alt="Katy Barboza"
            class="section__profile"
          />
        </figure>
        <div class="contents contents--info">
          <article class="section__data">
            <h1 class="section__name">I'm Katy Barboza</h1>
            <p class="section__role">
              UX/UI Designer & Frontend Web Developer
            </p>
          </article>
          <nav class="section__nav">
            <ul class="section__social-media">
              <li class="section__item">
                <a
                  href="https://github.com/katy-paola"
                  class="section__link"
                  target="_blank"
                  title="Visit GitHub"
                  ><img
                    src="/icons/github.svg"
                    class="section__icon"
                    alt=""
                  /></a
                >
              </li>
              <li class="section__item">
                <a
                  href="mailto:katybarbozabaena@gmail.com"
                  class="section__link"
                  target="_blank"
                  title="Send Mail"
                  ><img
                    src="/icons/gmail.svg"
                    class="section__icon"
                    alt=""
                  /></a
                >
              </li>
              <li class="section__item">
                <a
                  href="https://www.linkedin.com/in/katy-barboza-baena-406333203/"
                  class="section__link"
                  target="_blank"
                  title="Visit LinkedIn"
                  ><img
                    src="/icons/linkedin.svg"
                    class="section__icon"
                    alt=""
                  /></a
                >
              </li>
            </ul>
          </nav>
        </div>
      </div>
      <div
        class="section__download"
        title="Download Curriculum Vitae"
      >
        <a
          href="/CV-Katy-Barboza.pdf"
          download
          class="section__link-download"
        >
          <button class="section__button">Download CV</button>
        </a>
        <img src="/icons/download.svg" alt="" class="section__icon" />
      </div>
    </section>
    <main class="main">
      <h2 class="main__subtitle">
        Check out some projects coded or designed by me:
      </h2>
      <section class="main__projects">
        {
          projectsData.map((project) => {
            if (!project) return;
            return <ProjectCard {...project} />;
          })
        }
      </section>
    </main>
    <Footer />
  </main>
</Layout>
